{{#each surftricksArr}}
<div class="surftrick-list">
    <p>
     Surftrick Name:   {{this.name}}
    </p>
    <p>
        Image: {{this.image}}
    </p>
    <p>
        Rating of Difficulty: {{this.rateOfDifficulty}}
    </p> 

    <a href="/surftrickList/{{this._id}}">More details</a>
</div>





{{/each}}



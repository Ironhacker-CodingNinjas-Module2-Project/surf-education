<nav class="navbar navbar-expand-lg">
    <a class="nav-link" href="/surftrickList/create">Create your Surf Trick!</a>

    <ul>
        <form id="logout-form" action="/" method="POST">
            <button>Logout</button>
        </form>
        </li>

    </ul>
</nav>

<hr>


{{#if userInSession}}
<h2>Welcome, {{ userInSession.username }}!</h2>
<p>This is your profile page !</p>


{{else}}
<p>Still no logged in user, sorry!</p>
{{/if}}


<h1>Surftrick List</h1>

<div class="row row-eq-height">
    {{#each data.surftricksArr}}
    <div class="col-md-4 mb-5">
        <div class="cards-text-center shadow p-3 mb-5 w-100 bg-white rounded" style="width: 18rem;">
            <div class="image">
            <img src="{{this.image}}" class="card-img-top" alt="surftrick">
            </div>
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{description}}</p>
                <p class="card-rate">Rate of difficulty: {{this.rateOfDifficulty}}</p>
                <p class="card-author">Posted by: {{this.author.username}}</p>
                <a href="/surftrickList/{{this._id}}" class="btn btn-light center">More details</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>



